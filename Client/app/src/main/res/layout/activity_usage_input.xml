<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usageHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text=" Your Usage"
                android:textAlignment="viewStart"
                android:textColor="#8BC34A"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentDate"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="20dp"
                android:textColor="#8BC34A"
                android:textSize="30dp"
                android:text="TextView"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:backgroundTint="#26A69A"
                android:text="Edit"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="true" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/waterArrow"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:src="@drawable/arrow_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/waterHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Water"
                android:textStyle="bold"
                android:textColor="#04610C"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/water_input1"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    android:text="How many minutes did you shower today?" />

                <EditText
                    android:id="@+id/minutesShowered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:autofillHints="Number"
                    android:enabled="false"
                    android:hint="0"
                    android:inputType="number"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/water_input2"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    android:text="How many times did you flush the toilet today?" />

                <EditText
                    android:id="@+id/timesFlushed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:autofillHints="Number"
                    android:enabled="false"
                    android:hint="0"
                    android:inputType="number"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/water_input3"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    android:text="How many times did you run the dishwasher at home today?" />

                <EditText
                    android:id="@+id/timesDishwasherRun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:autofillHints="Number"
                    android:enabled="false"
                    android:hint="0"
                    android:inputType="number"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/water_input4"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    android:text="How many minutes did you run the washing machine today?" />

                <EditText
                    android:id="@+id/minutesWashingMachine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:autofillHints="Number"
                    android:enabled="false"
                    android:hint="0"
                    android:inputType="number"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wasteArrow"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:src="@drawable/arrow_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="0dp">

            <TextView
                android:id="@+id/wasterHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:text="Waste"
                android:textColor="#04610C"
                android:textStyle="bold"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/waste_input2"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    android:text="How many aluminum cans did you throw away today?" />

                <EditText
                    android:id="@+id/numAlumCansUsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:autofillHints="Number"
                    android:hint="0"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/waste_input3"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    android:text="How many styrofoam containers did you use today?" />

                <EditText
                    android:id="@+id/numStyroContainersUsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:autofillHints="Number"
                    android:hint="0"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/waste_input4"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    android:text="How many plastic straws did you use today?" />

                <EditText
                    android:id="@+id/numPlasticStrawsUsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:autofillHints="Number"
                    android:hint="0"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/waste_input5"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    android:text="How many plastic utensils did you use today?" />

                <EditText
                    android:id="@+id/numPlasticUtensilsUsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:autofillHints="Number"
                    android:hint="0"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:enabled="false"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>